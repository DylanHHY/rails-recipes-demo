<h1>客戶資料</h1>
<%= link_to "新建客戶", new_client_path%>

<table>
  <thead>
    <tr>
      <td>客戶姓名</td>
      <td>客戶email</td>
      <td>客戶電話</td>
    </tr>
  </thead>
  <tbody>
    <% @clients.each do |f| %>
    <tr>
      <td><%= link_to f.name, client_path(f.id)%></td>
      <td><%= f.email %></td>
      <td><%= f.phone %></td>
      <td><%= f.id %></td>
      <td><%=link_to "修改", edit_client_path(f.id) %></td>
      <td><%=link_to "刪除", client_path(f.id), method: "delete", data:{confirm:"確認刪除"} %></td>
    </tr>
  </tbody>
  <% end %>
</table>